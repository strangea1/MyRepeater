<Window x:Class="MyRepeater.NameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyRepeater"
        mc:Ignorable="d"
        Title="录像命名" Height="180" Width="240">
    <StackPanel Background="AliceBlue">
        <TextBlock Text="请输入此行为录像的名称：" FontSize="18" Margin="5"/>
        <TextBox Height="50" Margin="5" Name="NameOfRecord" KeyDown="NameOfRecord_KeyDown" />
        <Grid>
            <StackPanel Orientation="Horizontal">
                <Button Height="50" Width="100" Margin="10" Name="Ensure" Content="确认" FontSize="20" Click="Ensure_Click"/>
                <Button Height="50" Width="100" Margin="10" Name="Cancel" Content="取消" FontSize="20" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
